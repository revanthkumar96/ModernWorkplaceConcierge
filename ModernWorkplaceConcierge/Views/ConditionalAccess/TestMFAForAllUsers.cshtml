@{
    ViewBag.Current = "ConditionalAccessTestMFAForAllUsers";
}

<div class="jumbotron">
    <h1>Test MFA for All Users</h1>
    <p>Run the Maester test MT.1007 to check if at least one enabled Conditional Access policy requires MFA for all users.</p>
</div>

@using (Html.BeginForm("RunTestMFAForAllUsers", "ConditionalAccess", FormMethod.Post, new { @class = "form" }))
{
    <input type="text" name="clientId" class="d-none" id="clientId">

    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <button class="btn btn-info" type="submit" id="runTest">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none" id="loady"></span>
                    Run Test
                </button>
            </div>
        </div>
    </div>
}

<script>
    (function () {
        $('#runTest').click(function () {
            $('#loady').show();
        })
    })();
</script>

@section scripts {
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script src="~/Content/MwConciergeSignalR.js"></script>
}
